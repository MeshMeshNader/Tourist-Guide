<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_car_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/edit_text_shape"
    android:elevation="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/translator_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="177dp"
            android:layout_height="183dp"
            android:elevation="10dp"
            android:layout_marginTop="9dp"
            android:layout_gravity="center"
            android:background="@drawable/post_image_shape"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/translator_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/translator1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/translator_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Tala Translation Company"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/translator_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:lines="2"
            android:text="5 2241 4013"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/translator_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="40"
            android:textColor="@color/green_cyan"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>