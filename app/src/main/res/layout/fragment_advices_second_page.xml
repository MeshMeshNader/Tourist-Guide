<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome.Advices.Pages.AdvicesSecondPage">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/et_margin_small_start_end"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="Advices Before Travelling"
        android:textColor="@color/green_cyan"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/intro_pages_boxes"
        android:layout_below="@id/title_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_margin="@dimen/et_margin_small_start_end"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/et_margin_tiny_start_end"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.5"
                android:text="3. Pack light"
                android:textColor="@color/sunny_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/et_margin_small_start_end"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-1"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="It’s OK to wear the same t-shirt a few days in a row. Take half the clothes you think you will need…you won’t need as much as you think. Write down a list of essentials, cut it in half, and then only pack that! Plus, since you bought a small backpack like I said, you won’t have much room for extra stuff anyways!"
                android:textColor="@color/green_cyan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/et_margin_tiny_start_end"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.5"
                android:text="4. But take extra socks"
                android:textColor="@color/sunny_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/et_margin_small_start_end"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-1"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="You’ll lose a bunch to laundry gremlins, wear and tear, and hiking so packing extra will come in handy. I only take a few more than I need. Nothing beats a fresh pair of socks!"
                android:textColor="@color/green_cyan"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/intro_pages_boxes"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/next_btn"
        android:layout_marginTop="@dimen/et_margin_small_start_end"
        android:layout_marginBottom="@dimen/et_margin_small_start_end"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/prev_page_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/et_margin_vertical"
            android:src="@drawable/ic_prev_dark_pink" />


        <ImageView
            android:id="@+id/intro_first_box"
            android:layout_width="@dimen/box_w_and_h"
            android:layout_height="@dimen/box_w_and_h"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/intro_second_box"
            android:background="@drawable/intro_box_shape_empty__dark_pink" />

        <ImageView
            android:id="@+id/intro_second_box"
            android:layout_width="@dimen/box_w_and_h"
            android:layout_height="@dimen/box_w_and_h"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/intro_third_box"
            android:background="@drawable/intro_box_shape_fill_dark_pink" />

        <ImageView
            android:id="@+id/intro_third_box"
            android:layout_width="@dimen/box_w_and_h"
            android:layout_height="@dimen/box_w_and_h"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/intro_box_shape_empty__dark_pink" />


        <ImageView
            android:id="@+id/intro_fourth_box"
            android:layout_width="@dimen/box_w_and_h"
            android:layout_height="@dimen/box_w_and_h"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/intro_third_box"
            android:background="@drawable/intro_box_shape_empty__dark_pink" />

        <ImageView
            android:id="@+id/intro_fifth_box"
            android:layout_width="@dimen/box_w_and_h"
            android:layout_height="@dimen/box_w_and_h"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/intro_fourth_box"
            android:background="@drawable/intro_box_shape_empty__dark_pink" />


        <ImageView
            android:id="@+id/next_page_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/et_margin_vertical"
            android:src="@drawable/ic_next_dark_pink" />


    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/et_margin_start_end"
        android:layout_marginEnd="@dimen/et_margin_start_end"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_shape_green"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>