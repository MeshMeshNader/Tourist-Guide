<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_car_view"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/edit_text_shape"
    android:elevation="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/post_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="9dp"
            android:background="@drawable/post_image_shape"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/logo_text" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/post_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="10dp"
            android:text="Post Label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="10dp"
            android:lines="3"
            android:text="The Egyptian pyramids are "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/post_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="3dp"
            android:text=""
            android:textColor="@color/green_cyan"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>