<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.ForgetPassword">

    <ImageView
        android:id="@+id/forget_password_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:src="@drawable/logo_text" />


    <TextView
        android:id="@+id/text_forget_password_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_password_logo_text"
        android:gravity="center"
        android:text="Enter your email to reset \nyour account password!"
        android:textColor="@color/green_cyan"
        android:textSize="18sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/forget_password_email_et"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/text_forget_password_tv"
        android:layout_marginStart="@dimen/et_margin_start_end"
        android:layout_marginEnd="@dimen/et_margin_start_end"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:hint="Email"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/et_margin_start_end"
        android:weightSum="3"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forget_password_reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_shape_green"
            android:layout_marginEnd="@dimen/et_margin_vertical"
            android:textColor="@color/white"
            android:text="Reset Password"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forget_password_signup_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/et_margin_vertical"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_yellow"
            android:text="Sign up"
            />
    </LinearLayout>


</RelativeLayout>