<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome.AdminMainPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/admin_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            android:src="@drawable/logo_text" />

        <LinearLayout
            android:id="@+id/category_section"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@id/admin_logo_text"
            android:layout_marginTop="@dimen/et_margin_start_end"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/admin_hotel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:background="@drawable/button_shape_red"
                    android:src="@drawable/ic_hotel"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:layout_gravity="center"
                    android:text="Hotel"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/et_margin_vertical"
                    android:textSize="26sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/admin_restaurant_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:background="@drawable/button_shape_blue"
                    android:src="@drawable/ic_resturant"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:layout_gravity="center"
                    android:text="Restaurant"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/et_margin_vertical"
                    android:textSize="26sp"
                    />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</FrameLayout>